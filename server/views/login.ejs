<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Login | Chatter</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" type="text/css" href="css/main.css">
	</head>
	<body>
		<div class="login-page">
				<div class="login-wrap">
						<div class="login100-pic js-tilt" data-tilt>
							<!-- <img src="images/img-01.png" alt="IMG"> -->
						</div>

						<form class="login-form" method="POST" action="/login">
								<span class="login-form-title">
									Member Login
								</span>

								<div class="input-fields-wrap">
									<input class="input" type="text" name="username" placeholder="Username" autofocus>
									<span class="symbol">
										<i class="fa fa-user-circle" aria-hidden="true"></i>
									</span>
								</div>

								<div class="input-fields-wrap">
									<input class="input" type="password" name="password" placeholder="Password">
									<span class="symbol">
										<i class="fa fa-lock" aria-hidden="true"></i>
									</span>
								</div>

								<div class="login-register-form-button">
									<button class="login-button">
										Login
									</button>
								</div>

                <% if (message.includes("Incorrect") || message.includes("required")) { %>
								<div class="error-message">
									<p><%= message %></p>
								</div>
                <% } %>

								<% if (message.includes("out")) { %>
								<div class="logout-message">
									<p><%= message %></p>
								</div>
                <% } %>

								<div class="not-registered-sign-in">
									<a href="register.html"> Not registered? Create an account
										<i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
									</a>
								</div>
						</form>
				</div>
		</div>

		<script src="js/libs/jquery-3.3.1.min.js"></script>
	</body>
</html>
